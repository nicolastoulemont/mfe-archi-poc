{
  "compilerOptions": {
    /* Basic Options */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "outDir": "build",
    "rootDir": "src",
    "isolatedModules": true,
    "esModuleInterop": true,
    "baseUrl": "."
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "src/seed.ts"]
}
